Bootstrap: docker
From: almalinux:9

%post
        
  dnf install \
      gcc \
      glibc-devel \
      gcc-c++ \
      gcc-gfortran \
      python39 \
      platform-python-devel \
      which \
      wget \
      git \
      -y

  export PYTHON=/usr/bin/python3

  cd /opt/

  wget https://lhapdf.hepforge.org/downloads/?f=LHAPDF-6.5.3.tar.gz -O LHAPDF-6.5.3.tar.gz
  tar -zxvf LHAPDF-6.5.3.tar.gz
  cd LHAPDF-6.5.3
  ./configure --prefix=/opt/LHAPDF

  make -j 8
  make install

  wget http://lhapdfsets.web.cern.ch/lhapdfsets/current/NNPDF40_nnlo_hessian_pdfas.tar.gz -O- | tar xz -C /opt/LHAPDF/share/LHAPDF

  cd ..

  #install madgraph
  wget https://launchpad.net/mg5amcnlo/3.0/3.4.x/+download/MG5_aMC_v3.4.1.tar.gz -O MG5_aMC_v3_4_1.tar.gz
  tar -zxvf MG5_aMC_v3_4_1.tar.gz

